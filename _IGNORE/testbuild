export ORGANIZATION_NAME=danroscigno
export PROJECT_NAME=doc
export DEPLOYMENT_BRANCH=gh-pages

export WORKINGDIR=/Users/droscign/GitHub/doc

cd $WORKINGDIR
mkdir -p temp-en
mkdir -p temp-zh

cd temp-en
gh repo clone StarRocks/starrocks
cd starrocks

git checkout branch-3.1
rm -rf ${WORKINGDIR}/versioned_docs/version-3.1
mkdir -p ${WORKINGDIR}/versioned_docs/version-3.1
cp -r docs/* ${WORKINGDIR}/versioned_docs/version-3.1

git checkout branch-3.0
rm -rf ${WORKINGDIR}/versioned_docs/version-3.0
mkdir -p ${WORKINGDIR}/versioned_docs/version-3.0
cp -r docs/* ${WORKINGDIR}/versioned_docs/version-3.0

git checkout branch-2.5
rm -rf ${WORKINGDIR}/versioned_docs/version-2.5
mkdir -p ${WORKINGDIR}/versioned_docs/version-2.5
cp -r docs/* ${WORKINGDIR}/versioned_docs/version-2.5

cd ${WORKINGDIR}/temp-zh
gh repo clone StarRocks/docs.zh-cn
cd docs.zh-cn

git checkout 3.1
rm -rf ${WORKINGDIR}/chinese_versioned_docs/version-3.1
mkdir -p ${WORKINGDIR}/chinese_versioned_docs/version-3.1
cp -r * ${WORKINGDIR}/chinese_versioned_docs/version-3.1/

git checkout 3.0
rm -rf ${WORKINGDIR}/chinese_versioned_docs/version-3.0
mkdir -p ${WORKINGDIR}/chinese_versioned_docs/version-3.0
cp -r * ${WORKINGDIR}/chinese_versioned_docs/version-3.0/

git checkout 2.5
rm -rf ${WORKINGDIR}/chinese_versioned_docs/version-2.5
mkdir -p ${WORKINGDIR}/chinese_versioned_docs/version-2.5
cp -r * ${WORKINGDIR}/chinese_versioned_docs/version-2.5/

echo "cleanup before running yarn build"
cd ${WORKINGDIR}
rm -rf temp-en
rm -rf temp-zh
find . -type f -name TOC.md | xargs rm
rm chinese_versioned_docs/version-*/README.md
rm versioned_docs/version-*/README.md

echo "replacing StarRocks intro page\n\n"
find versioned_docs -type f -name "StarRocks_intro.md"  -print0 -exec cp _IGNORE/_English_intro.mdx "{}" \;
find chinese_versioned_docs -type f -name "StarRocks_intro.md"  -print0 -exec cp _IGNORE/_Chinese_intro.mdx "{}" \;

echo "adding index pages"
find versioned_docs -type d -name quick_start -print0 -exec cp _IGNORE/index_pages/English/quick_start.mdx "{}" \;
find chinese_versioned_docs -type d -name quick_start -print0 -exec cp _IGNORE/index_pages/Chinese/quick_start.mdx "{}" \;

# echo "adding frontmatter for sidebar language"
# _IGNORE/add_chinese_sidebar.sh
# _IGNORE/add_english_sidebar.sh

echo "verifying Markdown"
npx docusaurus-mdx-checker -c versioned_docs
npx docusaurus-mdx-checker -c en
npx docusaurus-mdx-checker -c zh
npx docusaurus-mdx-checker -c chinese_versioned_docs

yarn build

find build/zh -name "*html" | xargs sed -i '' "s/lang=\"en-US\"/lang=\"zh-CN\"/g"
find build/zh -name "*html" | xargs sed -i '' "s/name=\"docsearch:language\" content=\"en\"/name=\"docsearch:language\" content=\"zh\"/g"
find build/zh -name "*html" | xargs sed -i '' "s/\"og:locale\" content=\"en_US\"/\"og:locale\" content=\"zh_CN\"/g"
find build/zh -name "*html" | xargs sed -i '' "s/\"og:locale:alternate\" content=\"zh_CN\"/\"og:locale:alternate\" content=\"en_US\"/g"

